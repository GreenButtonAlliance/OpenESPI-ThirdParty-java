<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mockTemplate" name="mockTemplate" class="org.energyos.espi.thirdparty.mocks.MockRestTemplate" autowire-candidate="true"/>

    <alias name="${template}" alias="repositoryTemplate"/>

    <bean id="API_FEED_URL" class="java.lang.String">
        <constructor-arg value="${datacustodian.base.url}/api/feed"/>
    </bean>

    <bean id="jaxb2Marshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
        <property name="packagesToScan">
            <list>
                <value>org.energyos.espi.thirdparty.models.atom</value>
                <value>org.energyos.espi.thirdparty.domain</value>
            </list>
        </property>
    </bean>

    <bean id="usagePointRepositoryImpl" class="org.energyos.espi.thirdparty.repository.impl.UsagePointRepositoryImpl">
        <property name="template" ref="${template}"/>
    </bean>

</beans>